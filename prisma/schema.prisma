generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id             String    @id @default(cuid())
  title          String
  titleEn        String
  acronym        String
  startDate      DateTime
  duration       Int
  endDate        DateTime
  nationalAgency String
  language       String
  
  works          Work[]
  partners       Partner[]
  modules        Module[]  // Modules directly attached to Project
  sections       Section[]
  members        ProjectMember[]
  invitations    Invitation[]
  namingProposals ProjectNameProposal[]
  privateOrganizations Organization[]
  
  isTemplate     Boolean   @default(false)
  
  // New Setup Fields
  budget         Float?
  deadline       DateTime?
  programId      String?
  program        Program?  @relation(fields: [programId], references: [id])
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Program {
  id               String   @id @default(cuid())
  code             String   @unique
  name             String
  allowedDurations Int[]    // PostGres array
  allowedBudgets   Float[]  // PostGres array
  nationalAgencies Json?    // Mapping like { "IT": "INDIRE", "DE": "NA_DE" }
  
  projects         Project[]
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Theme {
  id        String   @id @default(cuid())
  name      String
  projectId String
  
  // Note: Request mentioned "Theme" as item 2. Assuming it links to Project or serves as a tag.
  // Simplifying to just a standalone table or field if needed, but creating a Model for flexibility.
}

model Work {
  id            String    @id @default(cuid())
  projectId     String
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sectionId     String?
  section       Section?  @relation(fields: [sectionId], references: [id])
  
  title         String
  description   String? // "Modulo" name in request structure (Works)
  startDate     DateTime
  endDate       DateTime
  budget        Float
  
  order         Int       @default(0)


  leadPartnerId String?
  leadPartner   Partner?  @relation(fields: [leadPartnerId], references: [id])

  tasks         Task[]
  modules       Module[]

  assignments   Assignment[]
  partners      WorkPartner[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Task {
  id            String    @id @default(cuid())
  workId        String
  work          Work      @relation(fields: [workId], references: [id], onDelete: Cascade)
  title         String
  startDate     DateTime
  endDate       DateTime
  budget        Float
  

  leadPartnerId String?
  leadPartner   Partner?  @relation(fields: [leadPartnerId], references: [id])
  
  partners      TaskPartner[] // M:N Relation for Co-Leads/Beneficiaries

  activities    Activity[]
  modules       Module[]
  assignments   Assignment[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Section {
  id            String    @id @default(cuid())
  projectId     String
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  title         String
  order         Int       @default(0)
  

  leadPartnerId String?
  leadPartner   Partner?  @relation(fields: [leadPartnerId], references: [id])

  modules       Module[]
  works         Work[]
  
  assignments   Assignment[]
  partners      SectionPartner[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Activity {
  id                 String    @id @default(cuid())
  taskId             String
  task               Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
  title              String
  venue              String?
  estimatedStartDate DateTime
  estimatedEndDate   DateTime
  leadingOrgId       String?   
  leadingOrg         Partner?  @relation("LeadingActivity", fields: [leadingOrgId], references: [id])
  participatingOrgIds String[] // IDs of partners
  allocatedAmount    Float
  expectedResults    String? // max 250 char
  
  modules            Module[]
  assignments        Assignment[]

  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}

model Partner {
  id             String    @id @default(cuid())
  projectId      String
  project        Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  
  name           String
  nation         String
  city           String
  role           String    // Coordinator, Partner, etc.
  type           String    // University, NPO, etc.
  budget         Float
  website        String?
  contactName    String?
  email          String?
  logo           String?

  users          User[]
  projectMembers ProjectMember[]
  leadingActivities Activity[] @relation("LeadingActivity")
  invitations    Invitation[]
  
  leadingWorks    Work[]
  leadingTasks    Task[]
  taskPartners    TaskPartner[] // M:N Relation
  leadingSections Section[]
  
  workPartners    WorkPartner[]
  sectionPartners SectionPartner[]

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model User {
  id             String    @id @default(cuid())
  
  // Legacy single-partner link (Optional now)
  partnerId      String?
  partner        Partner?  @relation(fields: [partnerId], references: [id], onDelete: Cascade)
  
  role           String    // Hierarchical role in partner/project
  surname        String
  name           String
  prefix         String?   // Dr., Prof., etc.
  gender         String?
  birthDate      DateTime?
  birthPlace     String?
  photo          String?
  email          String    @unique
  phone          String?
  landline       String?
  username       String    @unique
  password       String    
  motherTongue   String?   // User's native language (e.g. 'it', 'en')
  city           String?
  nation         String?
  
  assignments    Assignment[]
  textComponents TextComponent[]
  comments       Comment[]
  ratings        Rating[]
  
  memberships    ProjectMember[]
  affiliations   UserAffiliation[]
  availabilities UserAvailability[]
  moduleMemberships ModuleMember[]
  
  responsibleTaskPartners    TaskPartner[]    @relation("TaskPartnerResponsible")
  responsibleWorkPartners    WorkPartner[]    @relation("WorkPartnerResponsible")
  responsibleSectionPartners SectionPartner[] @relation("SectionPartnerResponsible")
  
  namingProposals ProjectNameProposal[]
  namingVotes     ProjectNameVote[]
  notifications   Notification[]

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Assignment {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  taskId    String?
  task      Task?    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  workId    String?
  work      Work?    @relation(fields: [workId], references: [id], onDelete: Cascade)
  sectionId String?
  section   Section? @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  activityId String?
  activity   Activity? @relation(fields: [activityId], references: [id], onDelete: Cascade)
  
  months    String?  // JSON string storing active months
  days      Float
  dailyRate Float?   // For cost calculation
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Module {
  id          String   @id @default(cuid())
  
  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sectionId   String?
  section     Section? @relation(fields: [sectionId], references: [id])
  workId      String?
  work        Work?    @relation(fields: [workId], references: [id], onDelete: Cascade)
  taskId      String?
  task        Task?    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  activityId  String?
  activity    Activity? @relation(fields: [activityId], references: [id], onDelete: Cascade)

  title       String
  subtitle    String?
  order       Int      @default(0)
  officialText String?
  maxChars    Int?
  
  type        String   @default("TEXT") // TEXT, POPUP
  options     String?  // JSON string for Popup options
  maxSelections Int?   // limit for Popup
  
  status      String   @default("TO_DONE") // TO_DONE, UNDER_REVIEW, DONE, AUTHORIZED
  completion  Int      @default(0)
  guidelines  String?  // Funding body instructions
  commentEndingDate DateTime?
  
  // Workflow Tracking
  authorizedBy String?
  authorizedAt DateTime?
  validatedBy  String?
  validatedAt  DateTime?

  members     ModuleMember[]
  components  TextComponent[]
  attachments Attachment[]
  versions    ModuleVersion[]
  comments    Comment[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TaskPartner {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  partnerId String
  partner   Partner  @relation(fields: [partnerId], references: [id], onDelete: Cascade)
  
  role      String   @default("BENEFICIARY") // LEAD, CO_LEAD, BENEFICIARY
  budget    Float?   // Optional override for budget distribution

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ownerId   String? // Temporary field to force schema change if needed, checking below first.
  // Actually, inserting responsibleUser.

  responsibleUserId String?
  responsibleUser   User?   @relation("TaskPartnerResponsible", fields: [responsibleUserId], references: [id])

  @@unique([taskId, partnerId])
}

model WorkPartner {
  id        String   @id @default(cuid())
  workId    String
  work      Work     @relation(fields: [workId], references: [id], onDelete: Cascade)
  
  partnerId String
  partner   Partner  @relation(fields: [partnerId], references: [id], onDelete: Cascade)
  
  role      String   @default("BENEFICIARY") // LEAD, CO_LEAD, BENEFICIARY
  budget    Float?   

  responsibleUserId String?
  responsibleUser   User?   @relation("WorkPartnerResponsible", fields: [responsibleUserId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([workId, partnerId])
}

model SectionPartner {
  id        String   @id @default(cuid())
  sectionId String
  section   Section  @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  
  partnerId String
  partner   Partner  @relation(fields: [partnerId], references: [id], onDelete: Cascade)
  
  role      String   @default("BENEFICIARY") // LEAD, CO_LEAD, BENEFICIARY
  budget    Float?   

  responsibleUserId String?
  responsibleUser   User?   @relation("SectionPartnerResponsible", fields: [responsibleUserId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([sectionId, partnerId])
}

model ModuleVersion {
  id        String   @id @default(cuid())
  moduleId  String
  module    Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  content   String   // The official text at this version
  createdAt DateTime @default(now())
}

model ModuleMember {
  id        String   @id @default(cuid())
  moduleId  String
  module    Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  role      String   // SUPERVISOR, LEADER, EDITOR, VIEWER
  
  // Separation of Concerns: Writing vs Grant Execution
  isWriter      Boolean @default(true)  // Has edit access in platform
  isGrantPerson Boolean @default(false) // Is listed in the Grant Agreement PDF
  grantTitle    String? // e.g., "Senior Researcher" (vs "Editor" in app)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([moduleId, userId])
}

model TextComponent {
  id          String   @id @default(cuid())
  moduleId    String
  module      Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  
  type        String   // USER_TEXT, COORD_NOTE, USER_NOTE
  content     String   
  order       Int      @default(0)
  
  status      String?  // ACCEPTED, TO_INTEGRATE, STANDBY
  
  comments    Comment[]
  ratings     Rating[]
  attachments Attachment[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Comment {
  id              String        @id @default(cuid())
  
  textComponentId String?
  textComponent   TextComponent? @relation(fields: [textComponentId], references: [id], onDelete: Cascade)
  
  moduleId        String?
  module          Module?       @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  
  userId          String
  user            User          @relation(fields: [userId], references: [id])
  content         String
  createdAt       DateTime      @default(now())
}

model Rating {
  id              String        @id @default(cuid())
  textComponentId String
  textComponent   TextComponent @relation(fields: [textComponentId], references: [id], onDelete: Cascade)
  userId          String
  user            User          @relation(fields: [userId], references: [id])
  value           Int           // 1-5
  createdAt       DateTime      @default(now())
  
  @@unique([textComponentId, userId])
}

model Attachment {
  id              String   @id @default(cuid())
  url             String
  name            String
  moduleId        String?
  module          Module?  @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  textComponentId String?
  textComponent   TextComponent? @relation(fields: [textComponentId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime @default(now())
}

// --- Matrix Architecture Models ---

model Organization {
  id          String   @id @default(cuid())
  name        String
  shortName   String?  // Acronym
  type        String?  // University, NGO, Company, etc.
  nation      String?
  city        String?
  address     String?
  logoUrl     String?
  website     String?
  unirankUrl  String?
  email       String?
  
  // Extended ECHE Data
  erasmusCode String? // e.g. I BOLOGNA01
  oid         String? // Organisation ID
  pic         String? // Participant Identification Code
  favicon     String? 
  
  // Scope: Global (null) or Project-Specific
  scopeProjectId String?
  scopeProject   Project? @relation(fields: [scopeProjectId], references: [id], onDelete: Cascade)
  
  departments Department[]
  affiliations UserAffiliation[]
  partners    Partner[]
  projectMembers ProjectMember[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Department {
  id             String   @id @default(cuid())
  name           String
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  projectMembers ProjectMember[]
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model UserAvailability {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  year      Int    
  
  // Monthly availability in days
  daysJan   Int    @default(0)
  daysFeb   Int    @default(0)
  daysMar   Int    @default(0)
  daysApr   Int    @default(0)
  daysMay   Int    @default(0)
  daysJun   Int    @default(0)
  daysJul   Int    @default(0)
  daysAug   Int    @default(0)
  daysSep   Int    @default(0)
  daysOct   Int    @default(0)
  daysNov   Int    @default(0)
  daysDec   Int    @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, year])
}

model ProjectMember {
  id           String   @id @default(cuid())
  
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  projectId    String
  project      Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  partnerId    String
  partner      Partner  @relation(fields: [partnerId], references: [id], onDelete: Cascade)

  departmentId String?
  department   Department? @relation(fields: [departmentId], references: [id])

  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  
  role         String   // Project-specific role (e.g. Coordinator, Partner)
  
  // Cost & Profile Overrides
  customDailyRate Float? 
  projectRole       String? // Job Title in this project (e.g. Senior Researcher)
  participationMode String? // ENTITY, NGO, INDEPENDENT
  
  // Linked Affiliation Card
  userAffiliationId String?
  userAffiliation   UserAffiliation? @relation(fields: [userAffiliationId], references: [id])

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([userId, projectId]) 
}

model UserAffiliation {
  id             String       @id @default(cuid())
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  departmentName String?
  role           String?      // Role within this organization (e.g. Professor)
  
  // Card Details
  contactPerson  String?
  phone          String?
  email          String?      // Specific email for this affiliation
  
  projectMembers ProjectMember[]
  
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model StandardCost {
  id          String   @id @default(cuid())
  area        String   // Macro-Area / Country Group (e.g. "Group 1")
  nation      String   // ISO Code or Name
  role        String   // e.g. "Researcher"
  dailyRate   Float    // Daily Cost in Euro
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([nation, role]) 
}
model Invitation {
  id        String   @id @default(cuid())
  email     String
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  token     String   @unique
  status    String   @default("PENDING") // PENDING, ACCEPTED, EXPIRED
  
  // Optional: Pre-assigned role or partner
  role      String?
  partnerId String?
  partner   Partner? @relation(fields: [partnerId], references: [id])
  
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([email, projectId])
}

model ProjectNameProposal {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title     String
  acronym   String
  
  votes     ProjectNameVote[]
  
  createdAt DateTime @default(now())
}

model ProjectNameVote {
  id         String              @id @default(cuid())
  proposalId String
  proposal   ProjectNameProposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  userId     String
  user       User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  stars      Int // 1-5
  
  createdAt  DateTime @default(now())

  @@unique([proposalId, userId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title     String
  message   String
  link      String?  // URL to redirect to (e.g., specific module)
  read      Boolean  @default(false)
  type      String   @default("INFO") // INFO, SUCCESS, WARNING, ERROR
  
  createdAt DateTime @default(now())
}
